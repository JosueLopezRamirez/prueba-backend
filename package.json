{
	"name": "backend-alysystem",
	"version": "0.0.1",
	"description": "API REST - Backend AlySkiper",
	"author": "Josue Ismael Lopez Ramirez",
	"license": "MIT",
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"start:normal": "ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
		"start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
		"start": "node dist/main.js",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"generate-typings": "ts-node src/generate-typings"
	},
	"dependencies": {
		"@nestjs/common": "^6.7.1",
		"@nestjs/core": "^6.7.1",
		"@nestjs/graphql": "^6.5.1",
		"@nestjs/jwt": "^6.1.1",
		"@nestjs/passport": "^6.1.0",
		"@nestjs/platform-express": "^6.7.2",
		"@nestjs/platform-socket.io": "^6.8.0",
		"@nestjs/typeorm": "^6.1.3",
		"@nestjs/websockets": "^6.8.0",
		"@types/graphql": "^14.0.7",
		"apollo-server-express": "^2.9.4",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.3.1",
		"class-validator": "^0.10.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"csurf": "^1.10.0",
		"dotenv": "^8.1.0",
		"geo-tz": "^5.0.5",
		"graphql": "^14.5.8",
		"graphql-tag-pluck": "^0.8.3",
		"graphql-tools": "^4.0.5",
		"helmet": "^3.21.0",
		"i": "^0.3.6",
		"isomorphic-fetch": "^2.2.1",
		"moment": "^2.24.0",
		"moment-timezone": "^0.5.27",
		"mysql": "^2.17.1",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^2.6.2",
		"rxjs": "^6.3.3",
		"twilio": "^3.34.0",
		"type-graphql": "^0.17.5",
		"typeorm": "^0.2.19"
	},
	"devDependencies": {
		"@nestjs/testing": "^6.0.0",
		"@types/dotenv": "^6.1.1",
		"@types/express": "4.16.1",
		"@types/jest": "24.0.11",
		"@types/node": "11.13.4",
		"@types/passport-jwt": "^3.0.2",
		"@types/passport-local": "^1.0.33",
		"@types/socket.io": "^2.1.3",
		"@types/supertest": "2.0.7",
		"jest": "24.7.1",
		"nodemon": "^1.19.2",
		"prettier": "1.17.0",
		"supertest": "4.0.2",
		"ts-jest": "24.0.2",
		"ts-node": "8.1.0",
		"tsc-watch": "2.2.1",
		"tsconfig-paths": "3.8.0",
		"tslint": "5.16.0",
		"typescript": "3.4.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
